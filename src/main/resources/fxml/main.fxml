<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mojito_soundboard.controller.MainController">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <StackPane BorderPane.alignment="CENTER">
               <children>
                  <Button styleClass="controlButton" mnemonicParsing="false" onAction="#settingsBtn" text="" StackPane.alignment="CENTER_LEFT" >
                     <graphic>
                        <FontIcon iconLiteral="ion4-ios-settings" iconSize="32" />
                     </graphic>
                  </Button>
                  <Slider fx:id="volumeSlider" maxWidth="300.0" />
                  <Button mnemonicParsing="false" text="Edit" StackPane.alignment="CENTER_RIGHT">
                     <StackPane.margin>
                        <Insets right="60.0" />
                     </StackPane.margin>
                  </Button>
                  <Button  styleClass="controlButton" mnemonicParsing="false" onAction="#addBtn"  StackPane.alignment="CENTER_RIGHT">
                     <graphic>
                        <FontIcon iconLiteral="ion4-ios-add" iconSize="48" />
                     </graphic>
                     <StackPane.margin>
                        <Insets right="10.0" />
                     </StackPane.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </BorderPane.margin>
            </StackPane>
         </bottom>
         <center>
            <FlowPane fx:id="grid" hgap="10.0" prefHeight="200.0" prefWidth="200.0" rowValignment="TOP" vgap="10.0">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin></FlowPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
